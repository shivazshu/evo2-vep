# Redis Configuration
# Local Redis
REDIS_URL=redis://localhost:6379

# Redis Cloud (Redis Labs) - Uncomment and configure
# REDIS_URL=redis://username:password@redis-12345.us-east-1-1.ec2.cloud.redislabs.com:12345
# REDIS_CLOUD_ENABLED=true
# REDIS_CLOUD_PROVIDER=redis_labs

# AWS ElastiCache - Uncomment and configure
# REDIS_URL=redis://your-cluster.xxxxx.cache.amazonaws.com:6379
# REDIS_CLOUD_ENABLED=true
# REDIS_CLOUD_PROVIDER=aws_elasticache

# Azure Cache for Redis - Uncomment and configure
# REDIS_URL=redis://username:password@your-instance.redis.cache.windows.net:6380
# REDIS_CLOUD_ENABLED=true
# REDIS_CLOUD_PROVIDER=azure_cache

# Google Cloud Memorystore - Uncomment and configure
# REDIS_URL=redis://10.0.0.1:6379
# REDIS_CLOUD_ENABLED=true
# REDIS_CLOUD_PROVIDER=gcp_memorystore

# Redis Cloud Security
REDIS_SSL_ENABLED=false
REDIS_SSL_VERIFY=true
REDIS_CONNECTION_POOL_SIZE=10
REDIS_CONNECTION_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# CORS Configuration
# For development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# For production (Netlify deployment)
# CORS_ORIGINS=https://your-netlify-app.netlify.app

# Logging Configuration
LOG_LEVEL=INFO

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600

# External API Rate Limiting
NCBI_RATE_LIMIT_DELAY=4000
UCSC_RATE_LIMIT_DELAY=2000

# Modal API Configuration (for variant analysis)
# This should be your deployed Modal endpoint
# Get this URL after deploying main.py to Modal
# MODAL_ANALYZE_VARIANT_BASE_URL=https://your-modal-app--analyze-single-variant.modal.run

# Render Deployment Configuration
# Set this to true when deploying on Render
# RENDER_DEPLOYMENT=true
# API_HOST=0.0.0.0
# API_PORT=${PORT:-8000}
